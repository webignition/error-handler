{
    "name": "webignition/error-handler",
    "description": "PHP error handler",
    "keywords": [],
    "homepage": "https://github.com/webignition/error-handler",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\ErrorHandler\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\ErrorHandler\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs-ecs": "./vendor/bin/ecs check src tests --ansi --no-progress-bar --config ecs.php",
        "cs-phpcs": "./vendor/bin/phpcs",
        "cs": [
            "@cs-ecs",
            "@cs-phpcs"
        ],
        "cs-fix": [
            "./vendor/bin/ecs check src tests --ansi --config ecs.php --fix"
        ],
        "static-analysis": "./vendor/bin/phpstan analyse",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.4|^8",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^0.12.78",
        "phpstan/phpstan-mockery": "^0.12.12",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5",
        "symplify/easy-coding-standard": "^9.1",
        "webignition/object-reflector": "^1.0"
    },
    "config": {
        "sort-packages": true
    }
}
