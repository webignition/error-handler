{
    "name": "webignition/error-handler",
    "description": "PHP error handler",
    "keywords": [],
    "homepage": "https://github.com/webignition/error-handler",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\ErrorHandler\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\ErrorHandler\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": [
            "./vendor/bin/ecs check src tests --ansi --config ecs.php",
            "./vendor/bin/phpcs"
        ],
        "cs-fix": [
            "./vendor/bin/ecs check src tests --ansi --config ecs.php --fix"
        ],
        "static-analysis": "./vendor/bin/phpstan analyse --ansi",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@cs",
            "@static-analysis",
            "@test"
        ]
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.0",
        "phpstan/phpstan-mockery": "^0.12.0",
        "phpunit/phpunit": "^9.2",
        "squizlabs/php_codesniffer": "3.*",
        "symplify/easy-coding-standard": "^8.0",
        "webignition/object-reflector": "^0.2.0"
    },
    "config": {
        "sort-packages": true
    }
}
